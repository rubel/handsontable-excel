{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",

  "files": {
    "includes": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"],
    "ignoreUnknown": false
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
